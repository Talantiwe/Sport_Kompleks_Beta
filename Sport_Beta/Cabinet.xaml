<Window x:Class="Sport.Cabinet"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sport"
      mc:Ignorable="d" 
      Title="Cabinet" Height="500" Width="700" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize">

    <Grid>
        <Image x:Name="Zad"
                   Height="30"
                   Width="30"
                   HorizontalAlignment="Left"
                   Margin="10,10,0,0"
                   VerticalAlignment="Top"
                   Source="/Photo/Back.png"
                   MouseDown="Zad_MouseDown"
                   Cursor="Hand">
        </Image>
        <TextBlock x:Name="loginTextBlock"  FontSize="25" HorizontalAlignment="Left" Margin="25,80,0,367" Width="321" />
        <TextBlock x:Name="NameTextBlock" FontSize="25" HorizontalAlignment="Left" Margin="25,171,0,49" Width="273" />
    </Grid>

</Window>
