<Window x:Class="Sport.Novosti"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sport"
      mc:Ignorable="d" 
      Title="Novosti" Width="700" Height="500" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <Grid Background="#FFF3E0E0">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <Grid x:Name="Zad" Grid.Row="0">
            <Image
                Height="30"
                Width="30"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10,10,0,0"
                Source="/Photo/Back.png"
                MouseDown="Zad_MouseDown"
                Cursor="Hand">
            </Image>
            <Label Height="30" Width="100" Content="НОВОСТИ" HorizontalAlignment="Center" FontSize="16" />
            <Polygon Fill="Black" Points="0,50,700,50" StrokeThickness="1" Stroke="Black"/>

        </Grid>
        <Grid Grid.Row="1">
            <Label Content="ТЮ-ТЮ" FontSize="30" Margin="237,100,237,-72"/>
        </Grid>

    </Grid>
</Window>
